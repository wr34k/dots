!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------
Xft.autohint:   1
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull

!-------------------------------------------------------------------------------
! URxvt settings
!-------------------------------------------------------------------------------
URxvt.modifier: mod1
URxvt*loginShell: true
URxvt.borderless: true
URxvt*dynamicColors: on
URxvt.geometry: 90x20
URxvt.internalBorder: 30
URxvt.lineSpace: 1
URxvt.saveLines: 10000
URxvt*termName: xterm-256color
URxvt.visualBell: false
URxvt.transparent: true
URxvt.shading: 15

! disable ctrl+shift binding
URxvt.iso14755:             false
URxvt.iso14755_52:          false

URxvt.perl-lib:             /usr/lib/urxvt/perl
URxvt.perl-ext-common:      default,matcher,resize-font

URxvt.url-laumcher:         /usr/bin/firefox
URxvt.matcher.button:       1
URxvt.matcher.pattern.1:    \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]

!! Fonts
URxvt.font: xft:Ubuntu Mono derivative Powerline:size=14, xft:Font Awesome 5 Free:size=14, xft:Font Awesome 5 Brands:size=14
URxvt.boldFont: xft:Ubuntu Mono derivative Powerline:size=14, xft:Font Awesome 5 Free:size=14, xft:Font Awesome 5 Brands:size=14
URxvt.allow_bold:           false
URxvt*boldMode:             true
! Fix font space
! URxvt*letterSpace:          -1

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Cursor
URxvt.cursorBlink:          false
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         false

